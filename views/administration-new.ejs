<div class="admin-content">
    <h2>New product</h2>
    <form method="POST">
        <div class="name-container">
            <h3>Name</h3>
            <input type="text" class="name-input" name="name" id="name">
        </div>
        <div class="description-container">
            <h3>Description</h3>
            <textarea class="descriptionarea" name="description" id="description" rows="7" cols="50"></textarea>
        </div>
        <div class="image-container">
            <h3>Picture URL</h3>
            <input type="text" class="image-input" name="imageUrl" id="imageUrl">
        </div>
        <div class="brand-container">
            <h3>Brand</h3>
            <input type="text" class="brand-input" name="brand" id="brand">
        </div>
        <div class="sku-container">
            <h3>SKU</h3>
            <input type="text" class="sku-input" name="SKU" id="SKU">
        </div>
        <div class="price-container">
            <h3>Price</h3>
            <input type="number" class="price-input" name="price" id="price">
        </div>
        <button type="submit" class="add-button">Add item</button>
    </form>
</div>